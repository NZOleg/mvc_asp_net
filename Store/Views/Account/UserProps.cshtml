@model AppUser
<div class="bg-primary m-1 p-1 text-white"><h4>@Model.UserName</h4></div>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="UserProps" method="post">
    <div class="form-group">
        <label asp-for="MembershipType"></label>
        <select asp-for="MembershipType" class="form-control"
                asp-items="@new SelectList(Enum.GetNames(typeof(MembershipTypes)))">
            <option disabled selected value="">Select a Membership Type
            </option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>